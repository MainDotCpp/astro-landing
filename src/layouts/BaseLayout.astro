---
import type { PluginConfig } from '@/components/PluginLoader.astro'
import BaseHead from '@/components/BaseHead.astro'
import ButtonAction from '@/components/ButtonAction.astro'
import PluginLoader from '@/components/PluginLoader.astro'
import RedirectCode from '@/components/RedirectCode.astro'
import '@/styles/globals.css'

export interface Props {
  title?: string
  description?: string
  plugins?: Record<string, PluginConfig>
  lang?: string
}

const { title = 'Home', description = 'Home', plugins = {}, lang = 'en' } = Astro.props
---

<!doctype html>
<html lang={lang}>
  <head>
    <BaseHead title={title} description={description} />
    <PluginLoader plugins={plugins} />
    <RedirectCode />
  </head>
  <body>
      <slot />
      <ButtonAction />
  </body>
</html>
