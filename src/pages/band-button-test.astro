---
import BandButton from '@/components/button/BandButton.astro'
---

<html lang="ko">
<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <title>BandButton 组件测试</title>
</head>
<body class="bg-gray-50 min-h-screen p-8">
  <div class="max-w-4xl mx-auto">
    <h1 class="text-3xl font-bold text-gray-900 mb-8">BandButton 组件测试</h1>

    <!-- 尺寸变体 -->
    <section class="mb-12">
      <h2 class="text-2xl font-semibold text-gray-800 mb-6">尺寸变体</h2>
      <div class="flex flex-wrap gap-4 items-center">
        <BandButton size="sm" text="小尺寸按钮" />
        <BandButton size="md" text="中尺寸按钮" />
        <BandButton size="lg" text="大尺寸按钮" />
        <BandButton size="xl" text="超大尺寸按钮" />
      </div>
    </section>



    <!-- 状态变体 -->
    <section class="mb-12">
      <h2 class="text-2xl font-semibold text-gray-800 mb-6">状态变体</h2>
      <div class="flex flex-wrap gap-4 items-center">
        <BandButton text="正常按钮" />
        <BandButton text="加载中..." loading={true} />
        <BandButton text="禁用按钮" disabled={true} />
        <BandButton text="无图标按钮" icon={false} />
      </div>
    </section>

    <!-- 全宽按钮 -->
    <section class="mb-12">
      <h2 class="text-2xl font-semibold text-gray-800 mb-6">全宽按钮</h2>
      <div class="space-y-4">
        <BandButton text="全宽按钮" fullWidth={true} />
      </div>
    </section>

    <!-- 链接按钮 -->
    <section class="mb-12">
      <h2 class="text-2xl font-semibold text-gray-800 mb-6">链接按钮</h2>
      <div class="flex flex-wrap gap-4 items-center">
        <BandButton text="内部链接" href="/" />
        <BandButton text="外部链接" href="https://band.us" target="_blank" />
      </div>
    </section>

    <!-- 自定义样式 -->
    <section class="mb-12">
      <h2 class="text-2xl font-semibold text-gray-800 mb-6">自定义样式</h2>
      <div class="flex flex-wrap gap-4 items-center">
        <BandButton
          text="自定义按钮"
          class="bg-purple-600 hover:bg-purple-700 text-white border-purple-600"
        />
        <BandButton
          text="圆角按钮"
          class="rounded-full"
        />
      </div>
    </section>
  </div>
</body>
</html>
