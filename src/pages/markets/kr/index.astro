      section[id] { scroll-margin-top: 72px; }
      /* 细噪点（极轻），覆盖全屏 */
      html::before {
        content: "";
        position: fixed;
        inset: 0;
        pointer-events: none;
        opacity: .03;
        mix-blend-mode: soft-light;
        background-image: url("data:image/svg+xml;utf8,<svg xmlns='http://www.w3.org/2000/svg' width='140' height='140' viewBox='0 0 140 140'><filter id='n'><feTurbulence type='fractalNoise' baseFrequency='0.9' numOctaves='2' stitchTiles='stitch'/></filter><rect width='100%' height='100%' filter='url(%23n)' opacity='0.65'/></svg>");
      }
      /* 微网格（24px间距极细线） */
      html::after {
        content: "";
        position: fixed;
        inset: 0;
        pointer-events: none;
        opacity: .04;
        background-image:
          repeating-linear-gradient(0deg, rgba(255,255,255,.04) 0 1px, transparent 1px 24px),
          repeating-linear-gradient(90deg, rgba(255,255,255,.04) 0 1px, transparent 1px 24px);
      }
      /* 移动端降噪隐藏网格 */
      @media (max-width: 768px) {
        html::before { opacity: .02; }
        html::after { display: none; }
      }

      /* Header (modern, mobile-first) */
      .hdr { position: sticky; top: 0; z-index: 50; background: rgba(11,18,32,.85); backdrop-filter: saturate(120%) blur(8px); border-bottom: 1px solid #1f2937; }
      .hdr-wrap { max-width: 1080px; margin: 0 auto; display: flex; align-items: center; justify-content: space-between; gap: 12px; padding: 10px 16px; }
      .brand { display:flex; align-items:center; gap:10px; }
      .brand .logo { width:28px; height:28px; border-radius:8px; background:linear-gradient(135deg,#60a5fa,#22c55e); box-shadow:0 0 0 1px rgba(255,255,255,.06) inset; }
      .brand .brand-text { line-height: 1; }
      .brand .title { font-weight:700; letter-spacing:.2px; color:#e5e7eb; }
      .brand .hdr-sub { font-size:12px; color:#93a3b8; opacity:.9; margin-top:4px; }

      .nav-desktop { display:flex; gap:12px; align-items:center; min-width:0; }
      .nav-link { color:#93c5fd; text-decoration:none; white-space:nowrap; padding:8px 10px; border-radius:10px; transition: background .2s ease, color .2s ease; }
