    <script>
function getTodayZero() {
  const now = new Date()
  return new Date(
    now.getFullYear(),
    now.getMonth(),
    now.getDate(),
    0,
    0,
    0,
    0,
  )
}

const cycleStart = getTodayZero() // 每天 0 点为起点
const cycleDays = 10 // 每 10 天为一个周期

function updateCountdown() {
  const now = new Date()
  const msPerDay = 24 * 60 * 60 * 1000
  const msPerHour = 60 * 60 * 1000
  const msPerMinute = 60 * 1000
  const msPerSecond = 1000

  const diffMs = now - cycleStart
  const daysPassed = Math.floor(diffMs / msPerDay)
  const daysLeft = cycleDays - (daysPassed % cycleDays) - 1

  const thisCycleStart = new Date(
    cycleStart.getTime()
    + Math.floor(daysPassed / cycleDays) * cycleDays * msPerDay
    + (daysPassed % cycleDays) * msPerDay,
  )
  const nextCycle = new Date(
    thisCycleStart.getTime() + (daysLeft + 1) * msPerDay,
  )
  let remainMs = nextCycle - now

  if (remainMs < 0)
    remainMs = 0

  const remainDays = Math.floor(remainMs / msPerDay)
  const remainHours = Math.floor((remainMs % msPerDay) / msPerHour)
  const remainMinutes = Math.floor((remainMs % msPerHour) / msPerMinute)
  const remainSeconds = Math.floor(
    (remainMs % msPerMinute) / msPerSecond,
  )

  // 更新页面上的 DOM
  document.getElementById('days').textContent = String(
    remainDays,
  ).padStart(2, '0')
  document.getElementById('hours').textContent = String(
    remainHours,
  ).padStart(2, '0')
  document.getElementById('minutes').textContent = String(
    remainMinutes,
  ).padStart(2, '0')
  document.getElementById('seconds').textContent = String(
    remainSeconds,
  ).padStart(2, '0')
}

updateCountdown() // 初始执行一次
setInterval(updateCountdown, 1000) // 每秒更新一次
</script>
