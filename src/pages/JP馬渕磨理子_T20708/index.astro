---
import BaseLayout from "../../layouts/BaseLayout.astro";
import { Image } from "astro:assets";
import MessageModal from "../../components/MessageModal.astro";
import header from "./static/header.png";
import avatar from "./static/head.jpg";
import img1 from "./static/img.png";
import "@fontsource/noto-sans-jp/300.css";
import "@fontsource/noto-sans-jp/400.css";
import "@fontsource/noto-sans-jp/500.css";
import "@fontsource/noto-sans-jp/700.css";
import {
  Check,
  Star,
  MessageCircle,
  ArrowRight,
  ChevronRight,
  AlertTriangle,
  Lock,
  Camera,
  Gift,
  ArrowLeftRight,
  Heart,
  TrendingUp,
  Sparkles,
  Crown,
  Zap,
} from "lucide-astro";
---

<BaseLayout title="馬渕磨理子" description="馬渕磨理子">
  <!-- Page-specific font configuration -->
  <style is:global>
    html {
      font-family: 'Noto Sans JP', ui-sans-serif, system-ui, sans-serif;
      -webkit-font-smoothing: antialiased;
      -moz-osx-font-smoothing: grayscale;
    }
    
    body {
      font-family: 'Noto Sans JP', ui-sans-serif, system-ui, sans-serif;
      font-weight: 400;
      line-height: 1.6;
    }
    
    h1, h2, h3, h4, h5, h6 {
      font-family: 'Noto Sans JP', ui-sans-serif, system-ui, sans-serif;
      font-weight: 700;
      line-height: 1.2;
    }
    
    * {
      font-family: inherit;
    }
  </style>
  <!-- Background with animated gradient -->
  <div
    class="min-h-screen bg-gradient-to-br from-violet-50 via-pink-50 to-blue-50 overflow-x-hidden relative"
  >
    <!-- Animated background elements -->
    <div class="absolute inset-0 overflow-hidden pointer-events-none">
      <div
        class="absolute -top-40 -right-40 w-80 h-80 bg-gradient-to-br from-pink-200/30 to-violet-200/30 rounded-full blur-3xl animate-pulse"
      >
      </div>
      <div
        class="absolute -bottom-40 -left-40 w-80 h-80 bg-gradient-to-br from-blue-200/30 to-emerald-200/30 rounded-full blur-3xl animate-pulse"
        style="animation-delay: 2s;"
      >
      </div>
    </div>

    <div class="relative z-10 w-full max-w-md mx-auto px-4 py-6">
      <!-- Enhanced Urgency Banner with glassmorphism -->
      <div
        class="bg-gradient-to-r from-rose-400 via-pink-400 to-violet-400 text-white text-center py-4 mb-6 rounded-2xl shadow-xl backdrop-blur-sm border border-white/20 relative overflow-hidden"
      >
        <div class="absolute inset-0 bg-white/10"></div>
        <div class="relative z-10">
          <div class="flex items-center justify-center gap-2 mb-1">
            <span class="text-sm font-bold">特別限定オファー</span>
          </div>
          <p class="text-xs font-bold flex items-center justify-center gap-2">
            <Crown class="w-3 h-3" />
            私のお友達500名様限定！残り127名様だけ♪
          </p>
        </div>
      </div>

      <!-- Enhanced Header with improved styling -->
      <div class="mb-8">
        <div class="relative group">
          <div
            class="absolute -inset-1 bg-gradient-to-r from-pink-300 to-violet-300 rounded-2xl blur opacity-25 group-hover:opacity-40 transition duration-300"
          >
          </div>
          <div class="relative">
            <Image
              src={header}
              alt="header"
              class="w-full rounded-2xl shadow-xl"
            />
          </div>
        </div>
      </div>

      <!-- Enhanced Social Proof with glassmorphism -->
      <div
        class="backdrop-blur-md bg-white/60 border border-emerald-200/50 p-5 mb-8 rounded-2xl shadow-xl relative overflow-hidden"
      >
        <div
          class="absolute top-0 left-0 w-full h-1 bg-gradient-to-r from-emerald-400 to-teal-400"
        >
        </div>
        <div class="flex items-center justify-center mb-4">
          <div class="flex text-amber-400 text-base gap-1 drop-shadow-sm">
            <Star class="w-5 h-5 fill-current" />
            <Star class="w-5 h-5 fill-current" />
            <Star class="w-5 h-5 fill-current" />
            <Star class="w-5 h-5 fill-current" />
            <Star class="w-5 h-5 fill-current" />
          </div>
        </div>
        <div class="text-emerald-700 text-sm ml-3 font-bold text-center">
          既に<span
            id="member-count"
            class="text-emerald-600 font-black text-lg"
            >12847</span
          >人の仲間が参加中！
        </div>
        <div
          class="bg-gradient-to-r from-emerald-50 to-teal-50 p-4 rounded-xl border border-emerald-100"
        >
          <p
            class="text-emerald-800 text-sm text-center leading-relaxed font-medium"
          >
            「磨理子さんのおかげで3日で8万円の利益が！本当にありがとうございます」
          </p>
          <p class="text-emerald-600 text-center text-xs mt-2 font-semibold">
            - 田中様（会社員）
          </p>
        </div>
      </div>

      <!-- Enhanced Feature Image -->
      <div class="mb-8">
        <div class="relative group">
          <div
            class="absolute -inset-1 bg-gradient-to-r from-blue-300 to-purple-300 rounded-2xl blur opacity-25 group-hover:opacity-40 transition duration-300"
          >
          </div>
          <div class="relative">
            <Image src={img1} alt="img1" class="w-full rounded-2xl shadow-xl" />
          </div>
        </div>
      </div>

      <!-- Enhanced Main Text with better glassmorphism -->
      <div
        class="backdrop-blur-lg bg-white/70 p-6 mb-8 rounded-2xl border border-white/30 shadow-2xl relative overflow-hidden"
      >
        <div
          class="absolute top-0 left-0 w-full h-full bg-gradient-to-br from-white/10 to-transparent pointer-events-none"
        >
        </div>
        <div class="relative z-10">
          <div class="flex items-center gap-2 sm:gap-3 mb-5 flex-nowrap">
            <span
              class="bg-gradient-to-r from-blue-500 to-purple-500 text-white text-xs sm:text-sm px-2 sm:px-4 py-1.5 sm:py-2 rounded-full font-bold shadow-lg whitespace-nowrap"
            >
              磨理子からの特別オファー
            </span>
            <span
              class="bg-gradient-to-r from-emerald-500 to-teal-500 text-white text-xs sm:text-sm px-2 sm:px-4 py-1.5 sm:py-2 rounded-full font-bold shadow-lg whitespace-nowrap"
            >
              完全無料
            </span>
          </div>
          <p class="text-gray-800 text-base leading-relaxed mb-5 font-medium">
            こんにちは！馬渕磨理子です。私のLINEを無料でお友達追加していただき、「受取」とメッセージを送るだけで、明日上がる銘柄をお教えします♪さらに、私が厳選した毎週60％の利益が期待できる特別な銘柄情報も、あなたにだけお届けします！
          </p>
          <div
            class="bg-gradient-to-r from-amber-50 to-orange-50 border-2 border-amber-200 p-4 rounded-xl shadow-inner"
          >
            <div
              class="flex flex-wrap items-center justify-center gap-1 sm:gap-2 md:gap-4 text-amber-800 font-bold"
            >
              <span
                class="flex items-center gap-1 bg-white/80 px-1.5 py-1 rounded-lg shadow-sm whitespace-nowrap text-xs"
              >
                <Check class="w-3 h-3 text-emerald-500 flex-shrink-0" />
                安全
              </span>
              <span
                class="flex items-center gap-1 bg-white/80 px-1.5 py-1 rounded-lg shadow-sm whitespace-nowrap text-xs"
              >
                <Check class="w-3 h-3 text-emerald-500 flex-shrink-0" />
                退会自由
              </span>
              <span
                class="flex items-center gap-1 bg-white/80 px-1.5 py-1 rounded-lg shadow-sm whitespace-nowrap text-xs"
              >
                <Check class="w-3 h-3 text-emerald-500 flex-shrink-0" />
                信頼性
              </span>
            </div>
          </div>
        </div>
      </div>

      <!-- Enhanced CTA Text with better animations -->
      <div
        class="bg-gradient-to-br from-purple-100 via-pink-100 to-violet-100 border-l-4 border-purple-500 p-6 mb-8 rounded-r-2xl shadow-xl relative overflow-hidden"
      >
        <div
          class="absolute top-0 right-0 w-20 h-20 bg-gradient-to-br from-purple-200/50 to-pink-200/50 rounded-full blur-xl"
        >
        </div>
        <div class="relative z-10 flex items-center gap-4">
          <div
            class="flex-shrink-0 bg-gradient-to-br from-purple-500 to-pink-500 p-3 rounded-2xl shadow-lg"
          >
            <Heart class="w-7 h-7 text-white" />
          </div>
          <div class="flex-1">
            <p class="text-purple-900 font-bold text-lg mb-2">
              一緒に資産を増やしませんか？
            </p>
            <p
              class="text-purple-600 text-sm flex items-center gap-2 font-medium"
            >
              <TrendingUp class="w-5 h-5" />
              たった30秒でお友達追加・今すぐ始められます♪
            </p>
          </div>
        </div>
      </div>

      <!-- Enhanced Primary CTA Button -->
      <div class="mb-8">
        <div class="relative group">
          <div
            class="absolute -inset-1 bg-gradient-to-r from-emerald-400 to-teal-400 rounded-2xl blur opacity-50 group-hover:opacity-75 transition duration-300"
          >
          </div>
          <button
            class="link-btn relative w-full bg-gradient-to-r from-emerald-500 via-emerald-600 to-teal-600 hover:from-emerald-600 hover:via-emerald-700 hover:to-teal-700 text-white font-bold py-5 px-6 rounded-2xl shadow-2xl hover:shadow-3xl transition-all duration-300 transform hover:scale-105"
          >
            <div class="flex flex-col items-center justify-center">
              <span class="text-xl flex items-center justify-center gap-3 mb-2">
                <MessageCircle class="w-7 h-7 flex-shrink-0" />
                磨理子とLINEでつながる
              </span>
              <span
                class="text-sm opacity-90 flex items-center justify-center gap-2 font-medium"
              >
                <Zap class="w-4 h-4 flex-shrink-0" />
                特別な銘柄情報をお届け♪
                <ChevronRight class="w-4 h-4 flex-shrink-0" />
              </span>
            </div>
          </button>
        </div>
      </div>

      <!-- Enhanced Value Stack -->
      <div
        class="backdrop-blur-lg bg-blue-50/80 border border-blue-200/50 p-6 mb-8 rounded-2xl shadow-xl relative overflow-hidden"
      >
        <div
          class="absolute top-0 left-0 w-full h-1 bg-gradient-to-r from-blue-400 to-purple-400"
        >
        </div>
        <h3
          class="text-blue-800 font-bold text-lg mb-5 text-center flex items-center justify-center gap-2"
        >
          <Gift class="w-6 h-6 text-purple-500" />
          私からの特別プレゼント♪
        </h3>
        <div class="grid gap-3">
          <div
            class="flex items-center gap-3 bg-white/70 p-3 rounded-xl shadow-sm border border-blue-100/50"
          >
            <Check class="w-5 h-5 text-emerald-500 flex-shrink-0" />
            <span class="text-blue-700 text-sm font-semibold"
              >明日上がる銘柄を毎日配信</span
            >
          </div>
          <div
            class="flex items-center gap-3 bg-white/70 p-3 rounded-xl shadow-sm border border-blue-100/50"
          >
            <Check class="w-5 h-5 text-emerald-500 flex-shrink-0" />
            <span class="text-blue-700 text-sm font-semibold"
              >週60％利益の厳選銘柄情報</span
            >
          </div>
          <div
            class="flex items-center gap-3 bg-white/70 p-3 rounded-xl shadow-sm border border-blue-100/50"
          >
            <Check class="w-5 h-5 text-emerald-500 flex-shrink-0" />
            <span class="text-blue-700 text-sm font-semibold"
              >初心者さん向け投資ガイド</span
            >
          </div>
          <div
            class="flex items-center gap-3 bg-white/70 p-3 rounded-xl shadow-sm border border-blue-100/50"
          >
            <Check class="w-5 h-5 text-emerald-500 flex-shrink-0" />
            <span class="text-blue-700 text-sm font-semibold"
              >限定投資セミナーへご招待</span
            >
          </div>
          <div
            class="flex items-center gap-3 bg-white/70 p-3 rounded-xl shadow-sm border border-blue-100/50"
          >
            <Check class="w-5 h-5 text-emerald-500 flex-shrink-0" />
            <span class="text-blue-700 text-sm font-semibold"
              >私に何でも質問できます</span
            >
          </div>
        </div>
      </div>

      <!-- Enhanced Info Text -->
      <div
        class="bg-gradient-to-r from-blue-500 via-purple-500 to-blue-600 p-6 mb-8 rounded-2xl shadow-xl relative overflow-hidden"
      >
        <div class="absolute inset-0 bg-white/10"></div>
        <div class="relative z-10 text-center">
          <p class="text-white text-lg leading-relaxed font-bold">
            私とLINEでお友達になって「受取」って送ってくれたら特別な株式情報をプレゼント♪
          </p>
        </div>
      </div>

      <!-- Enhanced Second CTA Button -->
      <div class="mb-8">
        <div class="relative group">
          <div
            class="absolute -inset-1 bg-gradient-to-r from-rose-400 to-pink-400 rounded-2xl blur opacity-50 group-hover:opacity-75 transition duration-300"
          >
          </div>
          <button
            class="link-btn relative w-full bg-gradient-to-r from-rose-500 via-pink-500 to-rose-600 hover:from-rose-600 hover:via-pink-600 hover:to-rose-700 text-white font-bold py-5 px-6 rounded-2xl shadow-2xl hover:shadow-3xl transition-all duration-300 transform hover:scale-105"
          >
            <div class="flex flex-col items-center justify-center">
              <span class="text-xl flex items-center justify-center gap-3 mb-2">
                <Check class="w-7 h-7 flex-shrink-0" />
                磨理子と一緒に始めよう
              </span>
              <span class="text-sm opacity-90 font-medium"
                >残り127名様・お早めに♪</span
              >
            </div>
          </button>
        </div>
      </div>

      <!-- Enhanced Final Urgency -->
      <div
        class="bg-gradient-to-r from-red-50 to-orange-50 border-2 border-red-200 p-4 mb-8 rounded-2xl shadow-lg relative overflow-hidden"
      >
        <div
          class="absolute top-0 left-0 w-full h-1 bg-gradient-to-r from-red-400 to-orange-400"
        >
        </div>
        <p
          class="text-red-700 text-sm text-center font-bold flex items-center justify-center gap-3 mt-1"
        >
          <AlertTriangle class="w-5 h-5" />
          今回限りの特別オファーです♪次回からは有料になってしまいます...
        </p>
      </div>

      <!-- Enhanced Trust Badges -->
      <div
        class="flex justify-center items-center mb-8 gap-4"
      >
        <div
          class="backdrop-blur-md bg-white/80 p-3 rounded-xl border border-gray-200/50 shadow-lg hover:shadow-xl transition-all duration-300"
        >
          <p
            class="text-gray-700 text-sm flex items-center gap-2 font-semibold"
          >
            <Lock class="w-4 h-4 text-green-500" />
            SSL暗号化
          </p>
        </div>
        <div
          class="backdrop-blur-md bg-white/80 p-3 rounded-xl border border-gray-200/50 shadow-lg hover:shadow-xl transition-all duration-300"
        >
          <p
            class="text-gray-700 text-sm flex items-center gap-2 font-semibold"
          >
            <Camera class="w-4 h-4 text-blue-500" />
            LINE公式
          </p>
        </div>
        <div
          class="backdrop-blur-md bg-white/80 p-3 rounded-xl border border-gray-200/50 shadow-lg hover:shadow-xl transition-all duration-300"
        >
          <p
            class="text-gray-700 text-sm flex items-center gap-2 font-semibold"
          >
            <Check class="w-4 h-4 text-emerald-500" />
            無料保証
          </p>
        </div>
      </div>

      <!-- Footer -->
      <div class="text-center pb-24">
        <span
          class="text-gray-500 text-sm hover:text-gray-700 transition-colors cursor-pointer underline font-medium"
        >
          プライバシーポリシー
        </span>
      </div>
    </div>
  </div>

  <!-- Enhanced Floating CTA (Sticky) -->
  <div
    class="fixed bottom-4 left-4 right-4 max-w-sm mx-auto z-50 transition-transform duration-300 ease-in-out"
  >
    <div class="relative group">
      <div
        class="absolute -inset-1 bg-gradient-to-r from-emerald-400 to-teal-400 rounded-full blur opacity-60 group-hover:opacity-80 transition duration-300"
      >
      </div>
      <button
        class="link-btn relative w-full bg-gradient-to-r from-emerald-500 to-teal-500 hover:from-emerald-600 hover:to-teal-600 text-white font-bold py-4 px-6 rounded-full shadow-2xl hover:shadow-3xl transition-all duration-300"
      >
        <span class="flex items-center justify-center gap-3 text-lg">
          <MessageCircle class="w-6 h-6 flex-shrink-0" />
          磨理子と無料でつながる♪
        </span>
      </button>
    </div>
  </div>

  <!-- Message Modal Component -->
  <MessageModal userAvatar={avatar} />
</BaseLayout>

<style>
  /* Custom Animations */

  /* Glassmorphism Enhancement */
  .glass-effect {
    backdrop-filter: blur(16px);
    background: rgba(255, 255, 255, 0.1);
    border: 1px solid rgba(255, 255, 255, 0.2);
  }

  /* Button Hover Effects */
  .link-btn {
    position: relative;
    overflow: hidden;
    transition: all 0.3s ease;
  }

  .link-btn::before {
    content: "";
    position: absolute;
    top: 0;
    left: -100%;
    width: 100%;
    height: 100%;
    background: linear-gradient(
      90deg,
      transparent,
      rgba(255, 255, 255, 0.2),
      transparent
    );
    transition: left 0.5s;
  }

  .link-btn:hover::before {
    left: 100%;
  }

  /* Enhanced Text Gradient */
  .text-gradient {
    background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
  }

  /* Floating Elements */

  /* Custom Scrollbar */
  ::-webkit-scrollbar {
    width: 6px;
  }

  ::-webkit-scrollbar-track {
    background: rgba(255, 255, 255, 0.1);
  }

  ::-webkit-scrollbar-thumb {
    background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    border-radius: 10px;
  }

  ::-webkit-scrollbar-thumb:hover {
    background: linear-gradient(135deg, #5a67d8 0%, #6b46c1 100%);
  }

  /* Enhanced Shadows */
  .shadow-enhanced {
    box-shadow:
      0 10px 25px -5px rgba(0, 0, 0, 0.1),
      0 20px 40px -5px rgba(0, 0, 0, 0.1),
      0 0 0 1px rgba(255, 255, 255, 0.05);
  }

  /* Pulse Animation for Important Elements */

  /* Smooth Transitions */
  * {
    transition: all 0.3s ease;
  }

  /* Loading Animation for Count Up */

  /* Mobile Optimizations */
  @media (max-width: 640px) {
    .link-btn {
      touch-action: manipulation;
    }
  }

  /* Reduce Motion for Accessibility */
  @media (prefers-reduced-motion: reduce) {
    * {
      animation: none !important;
      transition: none !important;
    }
  }
</style>

