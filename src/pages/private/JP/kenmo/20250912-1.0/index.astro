  <script>
// 倒计时功能
function startCountdown() {
  const countdownElement = document.getElementById('countdown-timer')
  if (!countdownElement)
    return

  const hoursElement = document.getElementById('hours')
  const minutesElement = document.getElementById('minutes')
  const secondsElement = document.getElementById('seconds')

  function updateCountdown() {
    const now = new Date()
    const today = new Date(now.getFullYear(), now.getMonth(), now.getDate())
    const endTime = new Date(today.getTime() + 20 * 60 * 60 * 1000) // 今天20:00

    // 如果当前时间已经超过20:00，设置为明天20:00
    if (now > endTime) {
      endTime.setDate(endTime.getDate() + 1)
    }

    const timeDiff = endTime.getTime() - now.getTime()

    if (timeDiff <= 0) {
      // 倒计时结束，重新设置为明天20:00
      endTime.setDate(endTime.getDate() + 1)
      const newTimeDiff = endTime.getTime() - now.getTime()
      const hours = Math.floor(newTimeDiff / (1000 * 60 * 60))
      const minutes = Math.floor((newTimeDiff % (1000 * 60 * 60)) / (1000 * 60))
      const seconds = Math.floor((newTimeDiff % (1000 * 60)) / 1000)

      if (hoursElement)
        hoursElement.textContent = hours.toString().padStart(2, '0')
      if (minutesElement)
        minutesElement.textContent = minutes.toString().padStart(2, '0')
      if (secondsElement)
        secondsElement.textContent = seconds.toString().padStart(2, '0')
    }
    else {
      const hours = Math.floor(timeDiff / (1000 * 60 * 60))
      const minutes = Math.floor((timeDiff % (1000 * 60 * 60)) / (1000 * 60))
      const seconds = Math.floor((timeDiff % (1000 * 60)) / 1000)

      if (hoursElement)
        hoursElement.textContent = hours.toString().padStart(2, '0')
      if (minutesElement)
        minutesElement.textContent = minutes.toString().padStart(2, '0')
      if (secondsElement)
        secondsElement.textContent = seconds.toString().padStart(2, '0')
    }
  }

  // 立即更新一次
  updateCountdown()

  // 每秒更新
  setInterval(updateCountdown, 1000)
}

// 页面加载完成后启动倒计时
document.addEventListener('DOMContentLoaded', startCountdown)
</script>

