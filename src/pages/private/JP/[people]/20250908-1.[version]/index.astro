---
import type { GetStaticPaths } from 'astro'
import { Image } from 'astro:assets'
import {
  AlertTriangle,
  Clock,
  Crown,
  Flame,
  TrendingUp,
  Zap,
  ArrowUp,
  Target,
  CheckCircle,
  Star,
  BarChart3,
  Users,
  MessageCircle,
  ArrowRight,
  DollarSign,
  Timer,
  AlertCircle
} from 'lucide-astro'
import BaseLayout from '@/layouts/BaseLayout.astro'
import lineIcon from '@/assets/line-icon.png'

export const getStaticPaths = (() => {
  return [
    { params: { people: '三橋貴明', version: '0' }, props: { name: '三橋貴明', img_prefix: 'sq_' } },
    { params: { people: '三橋貴明', version: '1' }, props: { name: '三橋貴明', img_prefix: 'sq1_' } },
    { params: { people: '三橋貴明', version: '2' }, props: { name: '三橋貴明', img_prefix: 'sq2_' } },
    { params: { people: '三橋貴明', version: '3' }, props: { name: '三橋貴明', img_prefix: 'sq3_' } },
    { params: { people: '三橋貴明', version: '4' }, props: { name: '三橋貴明', img_prefix: 'sq3_' } },
    { params: { people: '三橋貴明', version: '5' }, props: { name: '三橋貴明', img_prefix: 'sq5_' } },
    { params: { people: '馬渕磨理子', version: '0' }, props: { name: '馬渕磨理子', img_prefix: 'mlz_' } },
    { params: { people: '馬渕磨理子', version: '1' }, props: { name: '馬渕磨理子', img_prefix: 'mlz1_' } },
    { params: { people: '馬渕磨理子', version: '2' }, props: { name: '馬渕磨理子', img_prefix: 'mlz2_' } },
    { params: { people: '片山 晃', version: '0' }, props: { name: '片山 晃', img_prefix: 'psh_' } },
    { params: { people: '片山 晃', version: '1' }, props: { name: '片山 晃', img_prefix: 'psh1_' } },
    { params: { people: '前澤友作', version: '0' }, props: { name: '前澤友作', img_prefix: 'qzyz_' } },
    { params: { people: '大前研一', version: '0' }, props: { name: '大前研一', img_prefix: 'dq_' } },
    { params: { people: '大前研一', version: '1' }, props: { name: '大前研一', img_prefix: 'dq1_' } },
    { params: { people: '村上世彰', version: '0' }, props: { name: '', img_prefix: 'cssz_' } },
    { params: { people: '高橋洋一', version: '1' }, props: { name: '', img_prefix: 'gqyy_' } },
    { params: { people: '本田健', version: '0' }, props: { name: '', img_prefix: 'btj_' } },
    { params: { people: '小谷真生子', version: '0' }, props: { name: 'こたに まおこ', img_prefix: 'zsz_' } },
    { params: { people: '小谷真生子', version: '1' }, props: { name: 'こたに まおこ', img_prefix: 'zsz1_' } },
    { params: { people: '桐谷広人', version: '1' }, props: { name: '桐谷広人', img_prefix: 'tg_' } },
  ]
}) satisfies GetStaticPaths

const { img_prefix, name: people } = Astro.props
---

<BaseLayout title={`${people}の投資情報 | 20%急騰銘柄を先取り`} description={`昨日たった1日で株価20%急騰した銘柄情報を無料配信。資産を何十万も増やした人だけが知る秘密の投資法`} lang="ja">
  <style>
    @keyframes breathe {
      0%, 100% {
        transform: scale(1);
        box-shadow: 0 0 20px rgba(239, 68, 68, 0.4);
      }
      50% {
        transform: scale(1.05);
        box-shadow: 0 0 30px rgba(239, 68, 68, 0.6);
      }
    }

    @keyframes pulse-red {
      0%, 100% {
        background-color: #ef4444;
        transform: scale(1);
      }
      50% {
        background-color: #dc2626;
        transform: scale(1.02);
      }
    }

    @keyframes slide-up {
      0% {
        opacity: 0;
        transform: translateY(30px);
      }
      100% {
        opacity: 1;
        transform: translateY(0);
      }
    }

    @keyframes countdown-pulse {
      0%, 100% {
        transform: scale(1);
        box-shadow: 0 0 0 0 rgba(239, 68, 68, 0.7);
      }
      50% {
        transform: scale(1.05);
        box-shadow: 0 0 0 10px rgba(239, 68, 68, 0);
      }
    }

    .animate-breathe {
      animation: breathe 2s ease-in-out infinite;
    }

    .animate-pulse-red {
      animation: pulse-red 1.5s ease-in-out infinite;
    }

    .animate-slide-up {
      animation: slide-up 0.8s ease-out;
    }

    .animate-countdown-pulse {
      animation: countdown-pulse 2s ease-in-out infinite;
    }

    /* 日文字体设置 */
    body, html {
      font-family: "Noto Sans JP", -apple-system, BlinkMacSystemFont, "Segoe UI", "Roboto", "Oxygen", "Ubuntu", "Cantarell", "Helvetica Neue", sans-serif;
      font-feature-settings: "palt" 1;
      -webkit-font-smoothing: antialiased;
      -moz-osx-font-smoothing: grayscale;
    }

    /* 确保所有文本元素都使用日文字体 */
    main, div, h1, h2, h3, h4, h5, h6, p, span {
      font-family: "Noto Sans JP", -apple-system, BlinkMacSystemFont, "Segoe UI", "Roboto", "Oxygen", "Ubuntu", "Cantarell", "Helvetica Neue", sans-serif;
      font-feature-settings: "palt" 1;
    }

    /* 日文文本的行高优化 */
    .text-xl {
      line-height: 1.7;
      letter-spacing: 0.05em;
    }

    /* 加强日文字体权重 */
    .font-bold {
      font-weight: 700;
    }
  </style>

  <main class="min-h-screen bg-gradient-to-b from-gray-900 via-red-900 to-black text-white overflow-x-hidden">
    <!-- Hero Section -->
    <section class="relative py-12 px-4 min-h-screen flex items-center">
      <!-- Background Pattern -->
      <div class="absolute inset-0 bg-gradient-to-br from-red-900/20 via-black to-red-800/10"></div>
      <div class="absolute inset-0 bg-[url('data:image/svg+xml,%3Csvg%20width%3D%2260%22%20height%3D%2260%22%20viewBox%3D%220%200%2060%2060%22%20xmlns%3D%22http%3A//www.w3.org/2000/svg%22%3E%3Cg%20fill%3D%22none%22%20fill-rule%3D%22evenodd%22%3E%3Cg%20fill%3D%22%23ef4444%22%20fill-opacity%3D%220.1%22%3E%3Ccircle%20cx%3D%2230%22%20cy%3D%2230%22%20r%3D%222%22/%3E%3C/g%3E%3C/g%3E%3C/svg%3E')] opacity-30"></div>
      
      <div class="relative z-10 max-w-md mx-auto text-center w-full">
        <!-- Alert Badge -->
        <div class="inline-flex items-center px-4 py-2 bg-red-600 text-white rounded-full text-sm font-bold mb-6 animate-pulse-red">
          <AlertCircle size="16" class="mr-2" />
          緊急情報
        </div>

        <!-- Main Headline -->
        <h1 class="text-3xl font-black mb-6 leading-tight animate-slide-up">
          <span class="text-red-400">昨日、たった1日で</span><br>
          <span class="text-yellow-400">株価が20%急騰した</span><br>
          <span class="text-white">銘柄が存在する</span>
        </h1>

        <!-- Sub Headline -->
        <div class="bg-gradient-to-r from-red-600/20 to-orange-600/20 border-2 border-red-500/50 rounded-2xl p-6 mb-8 animate-slide-up" style="animation-delay: 0.2s">
          <div class="flex items-center justify-center mb-3">
            <DollarSign size="24" class="text-green-400 mr-2 flex-shrink-0" />
            <span class="text-xl sm:text-2xl font-black text-green-400 whitespace-nowrap">資産を一気に何十万円も増やした</span>
          </div>
          <div class="text-lg sm:text-xl font-bold text-white">人がいる</div>
        </div>

        <!-- Pain Point -->
        <div class="bg-black/50 border border-red-500/30 rounded-xl p-4 mb-8 animate-slide-up" style="animation-delay: 0.4s">
          <div class="text-lg font-bold text-red-300 mb-2">しかし、知らなかった人は</div>
          <div class="text-2xl font-black text-white">何も得られていない</div>
        </div>

        <!-- Urgency Section -->
        <div class="bg-gradient-to-r from-red-600 to-red-700 rounded-2xl p-6 mb-8 animate-slide-up" style="animation-delay: 0.6s">
          <div class="text-xl font-bold mb-4">株式市場は残酷です</div>
          <div class="text-lg mb-4">情報を掴む者だけが勝つ</div>
          <div class="text-lg font-bold text-yellow-300">迷っている間に、他人は資産を2倍、3倍にしている</div>
        </div>

        <!-- Solution Preview -->
        <div class="bg-gradient-to-br from-yellow-500/20 to-orange-500/20 border-2 border-yellow-400/50 rounded-2xl p-6 mb-8 animate-slide-up" style="animation-delay: 0.8s">
          <div class="flex items-center justify-center mb-3">
            <MessageCircle size="24" class="text-yellow-400 mr-2" />
            <span class="text-xl font-bold text-yellow-400">私の配信を受け取るだけで</span>
          </div>
          <div class="text-lg font-bold text-white mb-2">次に急騰する銘柄を事前に掴める</div>
          <div class="text-base text-yellow-200">数分の差が人生を変える</div>
        </div>


        <!-- CTA Button -->
        <button class="link-btn w-full bg-gradient-to-r from-green-500 to-green-600 hover:from-green-600 hover:to-green-700 text-white font-black text-lg sm:text-xl py-6 px-8 rounded-2xl shadow-2xl transform hover:scale-105 transition-all duration-300 animate-breathe mb-4">
          <div class="flex items-center justify-center">
            <Image src={lineIcon} alt="LINE" width={32} height={32} class="mr-3 flex-shrink-0" />
            <span class="whitespace-nowrap">今すぐLINEを追加してください</span>
          </div>
        </button>

        <!-- Warning Text -->
        <div class="text-center text-red-300 font-bold text-lg">
          行動しない人は一生損をし続ける<br>
          <span class="text-yellow-400">行動する人だけが勝ち続ける</span>
        </div>
      </div>
    </section>

    <!-- Success Stories Section -->
    <section class="py-12 px-4 bg-black/50">
      <div class="max-w-md mx-auto">
        <h2 class="text-2xl font-bold text-center mb-8 text-yellow-400">実績の証拠</h2>
        
        <div class="space-y-6">
          <!-- Success Story 1 -->
          <div class="bg-gradient-to-r from-green-600/20 to-emerald-600/20 border border-green-500/50 rounded-xl p-4">
            <div class="flex items-center justify-between mb-2">
              <div class="flex items-center">
                <Crown size="20" class="text-yellow-400 mr-2" />
                <span class="font-bold text-green-400">14日間で資産4倍</span>
              </div>
              <span class="text-2xl font-black text-green-400">+387%</span>
            </div>
            <div class="text-sm text-gray-300">エヌビエディア株 - 配信で事前に知らされた銘柄</div>
          </div>

          <!-- Success Story 2 -->
          <div class="bg-gradient-to-r from-blue-600/20 to-cyan-600/20 border border-blue-500/50 rounded-xl p-4">
            <div class="flex items-center justify-between mb-2">
              <div class="flex items-center">
                <TrendingUp size="20" class="text-blue-400 mr-2" />
                <span class="font-bold text-blue-400">7日間で資産3倍</span>
              </div>
              <span class="text-2xl font-black text-blue-400">+245%</span>
            </div>
            <div class="text-sm text-gray-300">テクノロジー株 - 配信で先取りした情報</div>
          </div>

          <!-- Success Story 3 -->
          <div class="bg-gradient-to-r from-purple-600/20 to-pink-600/20 border border-purple-500/50 rounded-xl p-4">
            <div class="flex items-center justify-between mb-2">
              <div class="flex items-center">
                <Star size="20" class="text-purple-400 mr-2" />
                <span class="font-bold text-purple-400">3日間で資産2倍</span>
              </div>
              <span class="text-2xl font-black text-purple-400">+156%</span>
            </div>
            <div class="text-sm text-gray-300">バイオテクノロジー株 - 配信限定情報</div>
          </div>
        </div>
      </div>
    </section>

    <!-- Why Choose Us Section -->
    <section class="py-12 px-4 bg-gradient-to-b from-red-900/30 to-black">
      <div class="max-w-md mx-auto">
        <h2 class="text-2xl font-bold text-center mb-8 text-white">なぜ選ばれるのか</h2>
        
        <div class="space-y-6">
          <div class="flex items-start space-x-4">
            <div class="bg-red-600 rounded-full p-2 flex-shrink-0">
              <Zap size="20" class="text-white" />
            </div>
            <div>
              <h3 class="text-lg font-bold text-yellow-400 mb-2">リアルタイム配信</h3>
              <p class="text-gray-300">市場が動く瞬間に、次の急騰銘柄を即座に配信</p>
            </div>
          </div>

          <div class="flex items-start space-x-4">
            <div class="bg-red-600 rounded-full p-2 flex-shrink-0">
              <Target size="20" class="text-white" />
            </div>
            <div>
              <h3 class="text-lg font-bold text-yellow-400 mb-2">高精度分析</h3>
              <p class="text-gray-300">独自のアルゴリズムで急騰銘柄を事前に特定</p>
            </div>
          </div>

          <div class="flex items-start space-x-4">
            <div class="bg-red-600 rounded-full p-2 flex-shrink-0">
              <Users size="20" class="text-white" />
            </div>
            <div>
              <h3 class="text-lg font-bold text-yellow-400 mb-2">限定メンバー</h3>
              <p class="text-gray-300">少数精鋭のメンバーだけが知る情報を独占配信</p>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- Final CTA Section -->
    <section class="py-12 px-4 bg-gradient-to-t from-red-600 to-red-800">
      <div class="max-w-md mx-auto text-center">
        <h2 class="text-2xl font-bold mb-6 text-white">今すぐ行動してください</h2>
        
        <div class="bg-black/30 rounded-2xl p-6 mb-8">
          <div class="text-lg font-bold text-yellow-400 mb-4">数分の差が人生を変える</div>
          <div class="text-white mb-6">迷っている間に、他人は資産を2倍、3倍にしている</div>
          
          <button class="link-btn w-full bg-gradient-to-r from-green-500 to-green-600 hover:from-green-600 hover:to-green-700 text-white font-black text-lg sm:text-xl py-6 px-8 rounded-2xl shadow-2xl transform hover:scale-105 transition-all duration-300 animate-breathe">
            <div class="flex items-center justify-center">
              <Image src={lineIcon} alt="LINE" width={32} height={32} class="mr-3 flex-shrink-0" />
              <span class="whitespace-nowrap">今すぐLINEを追加してください</span>
            </div>
          </button>
        </div>

        <div class="text-red-200 font-bold text-lg">
          行動しない人は一生損をし続ける<br>
          <span class="text-yellow-300">行動する人だけが勝ち続ける</span>
        </div>
      </div>
    </section>
  </main>

  <script is:inline>
    // Countdown Timer
    function updateCountdown() {
      const now = new Date();
      const endTime = new Date(now.getTime() + (2 * 60 * 60 * 1000) + (15 * 60 * 1000) + (30 * 1000)); // 2時間15分30秒後
      const timeLeft = endTime.getTime() - now.getTime();

      if (timeLeft > 0) {
        const hours = Math.floor(timeLeft / (1000 * 60 * 60));
        const minutes = Math.floor((timeLeft % (1000 * 60 * 60)) / (1000 * 60));
        const seconds = Math.floor((timeLeft % (1000 * 60)) / 1000);

        const hoursEl = document.getElementById('countdown-hours');
        const minutesEl = document.getElementById('countdown-minutes');
        const secondsEl = document.getElementById('countdown-seconds');

        if (hoursEl) hoursEl.textContent = hours.toString().padStart(2, '0');
        if (minutesEl) minutesEl.textContent = minutes.toString().padStart(2, '0');
        if (secondsEl) secondsEl.textContent = seconds.toString().padStart(2, '0');
      } else {
        // カウントダウン終了
        const countdownEl = document.querySelector('.animate-countdown-pulse');
        if (countdownEl) {
          countdownEl.innerHTML = '<div class="text-center text-yellow-300 font-bold text-lg">配信終了！</div>';
        }
      }
    }

    // ページ読み込み後に実行
    document.addEventListener('DOMContentLoaded', function() {
      updateCountdown(); // 初回実行
      setInterval(updateCountdown, 1000); // 1秒ごとにカウントダウンを更新
    });
  </script>
</BaseLayout>
