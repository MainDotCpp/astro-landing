    box-sizing: border-box;
  }

  .main-container {
    max-width: 600px;
    margin: 0 auto;
    padding: 20px;
    background-color: #F8F9FA;
    min-height: 100vh;
    font-family: 'Hiragino Sans', 'ヒラギノ角ゴ Pro W3', 'Hiragino Kaku Gothic Pro', 'Yu Gothic Medium', 'メイリオ', Meiryo, 'MS PGothic', sans-serif;
  }

  /* ヘッダー：講師紹介 */
  .hero-section {
    margin-bottom: 30px;
  }

  .instructor-card {
    background: white;
    border-radius: 16px;
    padding: 30px;
    box-shadow: 0 4px 20px rgba(44, 62, 80, 0.1);
    text-align: center;
    border: 1px solid #E8E9EA;
  }

  .avatar-container {
    margin-bottom: 20px;
    display: flex;
    justify-content: center;
  }

  .avatar-image {
    width: 120px;
