<script is:inline>
// 页面加载完成后追踪漏斗起始步骤
document.addEventListener('DOMContentLoaded', () => {
  // 倒计时功能
  function startCountdown() {
    const hoursEl = document.getElementById('hours')
    const minutesEl = document.getElementById('minutes')
    const secondsEl = document.getElementById('seconds')

    if (!hoursEl || !minutesEl || !secondsEl)
      return

    // 设置结束时间为今天23:59:59
    const now = new Date()
    const endTime = new Date(now.getFullYear(), now.getMonth(), now.getDate(), 23, 59, 59)

    function updateCountdown() {
      const now = new Date().getTime()
      const distance = endTime.getTime() - now

      if (distance < 0) {
        // 倒计时结束，重置为第二天
        endTime.setDate(endTime.getDate() + 1)
        return
      }

      const hours = Math.floor(distance / (1000 * 60 * 60))
      const minutes = Math.floor((distance % (1000 * 60 * 60)) / (1000 * 60))
      const seconds = Math.floor((distance % (1000 * 60)) / 1000)

      // 添加数字变化动画效果
      if (hoursEl.textContent !== hours.toString().padStart(2, '0')) {
        hoursEl.style.transform = 'scale(1.1)'
        setTimeout(() => {
          hoursEl.style.transform = 'scale(1)'
        }, 200)
      }
      if (minutesEl.textContent !== minutes.toString().padStart(2, '0')) {
        minutesEl.style.transform = 'scale(1.1)'
        setTimeout(() => {
          minutesEl.style.transform = 'scale(1)'
        }, 200)
      }
      if (secondsEl.textContent !== seconds.toString().padStart(2, '0')) {
        secondsEl.style.transform = 'scale(1.1)'
        setTimeout(() => {
          secondsEl.style.transform = 'scale(1)'
        }, 200)
      }

      hoursEl.textContent = hours.toString().padStart(2, '0')
      minutesEl.textContent = minutes.toString().padStart(2, '0')
      secondsEl.textContent = seconds.toString().padStart(2, '0')

      // 最后10分钟增加紧急感
      if (hours === 0 && minutes < 10) {
        document.querySelector('.countdown-timer').classList.add('urgent')
      }

      // 最后1分钟闪烁效果
      if (hours === 0 && minutes === 0) {
        document.querySelector('.countdown-timer').classList.add('critical')
      }
    }

    updateCountdown()
    setInterval(updateCountdown, 1000)
  }

  // 实时参与者数量更新
  function updateParticipantCount() {
    const countEl = document.getElementById('participant-count')
    const spotsEl = document.getElementById('remaining-spots')

    if (!countEl || !spotsEl)
      return

    // 模拟实时增长
    let currentCount = 2847
    let remainingSpots = 27

    setInterval(() => {
      // 随机增加参与者
      if (Math.random() > 0.7) {
        currentCount += Math.floor(Math.random() * 3) + 1
        remainingSpots = Math.max(0, remainingSpots - 1)

        countEl.textContent = currentCount.toLocaleString()
        spotsEl.textContent = remainingSpots

        // 更新进度条
        const fillEl = document.querySelector('.spots-fill')
        if (fillEl) {
          const percentage = Math.max(5, (remainingSpots / 100) * 100)
          fillEl.style.width = `${percentage}%`
        }
      }
    }, 8000 + Math.random() * 12000) // 8-20秒随机间隔
  }

  // FAQ交互功能
  function initFAQ() {
    const faqQuestions = document.querySelectorAll('.faq-question')

    faqQuestions.forEach((question) => {
      question.addEventListener('click', () => {
        const answer = question.nextElementSibling
        const isActive = question.classList.contains('active')

        // 关闭所有其他答案
        document.querySelectorAll('.faq-answer').forEach((ans) => {
          ans.classList.remove('open')
          setTimeout(() => {
            if (!ans.classList.contains('open')) {
              ans.style.display = 'none'
            }
          }, 300)
        })
        document.querySelectorAll('.faq-question').forEach((q) => {
          q.classList.remove('active')
        })

        // 切换当前答案
        if (!isActive) {
          question.classList.add('active')
          answer.style.display = 'block'
          setTimeout(() => {
            answer.classList.add('open')
          }, 10)

          // 平滑滚动到FAQ项目
          question.scrollIntoView({
            behavior: 'smooth',
            block: 'center',
          })

          // 追踪FAQ点击
          if (window.umami && window.umami.track) {
            umami.track('faq-click', {
              question: question.textContent.trim(),
              page: window.location.pathname,
            })
          }
        }
      })
    })
  }

  // 启动所有功能
  startCountdown()
  updateParticipantCount()
  initFAQ()
})
