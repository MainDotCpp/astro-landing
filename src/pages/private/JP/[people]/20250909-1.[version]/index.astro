---
import type { GetStaticPaths } from 'astro'
import { Image } from 'astro:assets'

export const getStaticPaths = (() => {
  return [
    { params: { people: '测试器', version: '0' }, props: { name: 'テスタ', img_prefix: 'csq1_' } },
  ]
}) satisfies GetStaticPaths

const { img_prefix, name: people } = Astro.props

const img1 = await import(`./static/${img_prefix}1.png`)
const img2 = await import(`./static/${img_prefix}2.png`)
const img3 = await import(`./static/${img_prefix}3.png`)
const img5 = await import(`./static/${img_prefix}5.png`)
---
<!doctype html>
<html lang="jp">
  <head>
    <meta charset="UTF-8" />
    <meta
      name="viewport"
      content="width=device-width,inITial-scale=0.5, minimum-scale=0.5, maximum-scale=0.5, user-scalable=no"
    />
    <title>{people}</title>
    <!--------------------------- ↓ ↓ ↓ ↓ ↓ ↓ 跟踪代码粘贴在下面 ↓ ↓ ↓ ↓ ↓ ↓ ----------------------------------->

    <script>
      let link = 'https://www.google.com/'
    </script>

    <script>
 function jump() {
   try {
     if (typeof gtag_report_conversion !== 'undefined') {
       gtag_report_conversion(link)
     }

     if (typeof gtag !== 'undefined') {
       gtag('event', 'contact', {})
     }
   }
 catch (error) {
     console.error(error)
   }
 finally {
     setTimeout(() => {
       window.location.href = link
     }, 100)
   }
 }
 </script>
    <style>
      .tail-gif {
        position: fixed;
        bottom: 10px;
        left: 50%;
        transform: translateX(-50%);
        color: white;
        text-align: center;
        width: 100%;
      }

      .tail-gif-img {
        display: block;
        margin: 0 auto;
        max-width: 28%;
        border-radius: 115px;
        animation: scaleAnimation 0.5s infinite alternate;
      }

      .tail-gif {
        width: 100%;
      }

      .tail-gif img {
        max-width: 100%;
      }

      @keyframes scaleAnimation {
        0% {
          transform: scale(0.9);
        }

        100% {
          transform: scale(1);
        }
      }
    </style>
  </head>

  <body style="background-color: #e4e4e4">
    <div style="padding-bottom: 200px; max-width: 840px; margin: 0 auto; font-size: 0%">
      <Image src={img1.default} width={840} alt="Image 1" />
      <Image src={img2.default} width={840} alt="Image 2" />
      <Image src={img3.default} width={840} alt="Image 3" />
      <a href="javascript:{jump()}">
        <img width="100%" src="/mjSFqQ/JP/20250909-1.0/static/4.png" />
      </a>
      <Image src={img5.default} width={840} alt="Image 5" />
      <a href="javascript:{jump()}">
        <img width="100%" src="/mjSFqQ/JP/20250909-1.0/static/6.png" />
      </a>
      <img width="100%" src="/mjSFqQ/JP/20250909-1.0/static/7.png" />
    </div>

    <div class="tail-gif" style="max-width: 840px">
      <a href="javascript:{jump()}">
        <img width="100%" src="/mjSFqQ/JP/20250909-1.0/static/tc.png" alt="" class="tail-gif-img" />
      </a>
    </div>
  </body>
</html>
