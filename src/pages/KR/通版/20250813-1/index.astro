  <script>
(function () {
  const btn = document.getElementById('menuBtn')
  const panel = document.getElementById('mobileMenu')
  if (btn && panel) {
    btn.addEventListener('click', () => {
      const open = !panel.hasAttribute('hidden')
      if (open) { panel.setAttribute('hidden', ''); btn.setAttribute('aria-expanded', 'false') }
      else { panel.removeAttribute('hidden'); btn.setAttribute('aria-expanded', 'true') }
    })
    panel.addEventListener('click', (e) => {
      const t = e.target
      if (t instanceof Element && t.matches('a.nav-link')) {
        panel.setAttribute('hidden', '')
        btn.setAttribute('aria-expanded', 'false')
      }
    })
  }
  const ids = ['ticker', 'overview', 'compare', 'mini', 'quotes', 'calendar']
  const links = Array.from(document.querySelectorAll('#page-header a.nav-link'))
  const io = new IntersectionObserver((entries) => {
    entries.forEach((e) => {
      if (e.isIntersecting) {
        const id = e.target.id
        links.forEach(l => l.classList.toggle('active', l.getAttribute('href') === `#${id}`))
      }
    })
  }, { rootMargin: '-40% 0% -55% 0%', threshold: 0.01 })
  ids.forEach((id) => {
    const el = document.getElementById(id); if (el)
      io.observe(el)
  })
})()
</script>
