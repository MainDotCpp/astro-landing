---
import type { GetStaticPaths } from 'astro'
// import { Image } from 'astro:assets' // 不再需要图片
import { Award, BarChart3, Clock, DollarSign, MessageCircle, Phone, Shield, Target, TrendingUp } from 'lucide-react'
import CtaButton from '@/components/CtaButton.astro'
import { Card, CardContent } from '@/components/ui/card'
import BaseLayout from '@/layouts/KRBaseLayout.astro'
// Import CSS files
import './static/css/style2.css'
import './static/css/animate.min.css'
import './static/css/slick-theme.css'

export function getStaticPaths() {
  const campaigns = [
    { params: { version: '0' } },
  ]
  return [
    ...campaigns.map(p => ({ params: { ...p.params, t: '卡扣' } })),
    ...campaigns.map(p => ({ params: { ...p.params, t: '棒群' } })),
  ]
}

const { t = '卡扣' } = Astro.params
