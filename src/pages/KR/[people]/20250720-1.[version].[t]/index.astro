      }

      .hero::after {
        content: '';
        position: absolute;
        bottom: 0;
        left: 0;
        width: 100%;
        height: 1px;
        background: linear-gradient(90deg, transparent, rgba(255,215,0,0.3), transparent);
        z-index: 2;
      }

      .hero::before {
        content: '';
        position: absolute;
        top: -50%;
        left: -50%;
        width: 200%;
        height: 200%;
        background: radial-gradient(circle, rgba(255,215,0,0.15) 0%, transparent 70%);
        animation: heroGlow 4s ease-in-out infinite alternate;
      }


      .hero-content {
        max-width: 1000px;
        margin: 0 auto;
        position: relative;
        z-index: 10;
        padding: 0 20px;
        text-align: center;
      }

      .hero-content::before {
        content: '';
        position: absolute;
        top: -30px;
        left: 50%;
        transform: translateX(-50%);
        width: 60px;
        height: 4px;
        background: linear-gradient(90deg, transparent, #f1c40f, transparent);
        border-radius: 2px;
        z-index: -1;
      }


      .hero h1 {
        font-size: clamp(42px, 5.5vw, 68px);
        font-weight: 700;
        margin-bottom: 35px;
        line-height: 1.15;
        color: #ffffff;
        letter-spacing: -1.5px;
        text-shadow:
          0 2px 4px rgba(0,0,0,0.3),
