      /* Hero Section - Elegant & Modern */
      .hero {
        padding: 120px 0 100px;
        background:
          linear-gradient(135deg, #1a1a2e 0%, #16213e 50%, #0f3460 100%);
        color: white;
        position: relative;
        overflow: hidden;
      }

      .hero-bg {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background-image: url('/src/assets/bg_1.jpg');
        background-size: cover;
        background-position: center;
        opacity: 0.08;
        z-index: 0;
      }

      .hero::before {
        content: '';
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background:
          radial-gradient(circle at 30% 20%, rgba(255,215,0,0.08) 0%, transparent 50%),
